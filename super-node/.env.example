# ── Server ──
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=debug

# ── Redis ──
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# ── Betfair Provider ──
BETFAIR_BASE_URL=http://localhost:8080
BETFAIR_ENABLED=false

# ── Sportradar Provider ──
SPORTRADAR_BASE_URL=https://api.sportradar.com
SPORTRADAR_API_KEY=your_api_key_here
SPORTRADAR_ENABLED=false

# ── Diamond Provider (TurnkeyXGaming) ──
# Supported sports: Cricket (4), Football (1), Tennis (2)
# Uses dual-URL "first response wins" pattern for resilience
DIAMOND_BASE_URL=http://cloud.turnkeyxgaming.com:8086/
DIAMOND_SECONDARY_BASE_URL=http://local.turnkeyxgaming.com:8086/
DIAMOND_API_KEY=your_api_key_here
DIAMOND_REQUEST_TIMEOUT=2000
DIAMOND_POST_TIMEOUT=4000
DIAMOND_ENABLED=false

# ── Polling ──
POLLING_ENABLED=false
POLLING_INTERVAL_MS=5000


# exchange provider
EXCHANGE_ENABLED=true
EXCHANGE_BASE_URL=http://your-diamond-proxy:8086
EXCHANGE_REQUEST_TIMEOUT=3000
EXCHANGE_POST_TIMEOUT=5000
EXCHANGE_POLL_MATCH_LIST=60000
EXCHANGE_POLL_TOP_EVENTS=3600000
EXCHANGE_POLL_BANNERS=3600000
EXCHANGE_POLL_SIDEBAR=86400000
EXCHANGE_POLL_ODDS=1000
EXCHANGE_ODDS_HOT_TTL=30
